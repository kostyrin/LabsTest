<link rel="stylesheet" href="~/lib/datatables/media/css/dataTables.bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/datatables/media/css/dataTables.jqueryui.min.css" />

<div class="row">
    <div class="col-md-12">
        <h2>List of Users</h2>
        
        <div class="container">
            <br />
            <div style="width:90%; margin:0 auto;">
                <table id="table" class="dataTable table table-striped table-bordered nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Birthday</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>  
    </div>
</div>


@section Scripts {
    <script src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/moment/moment.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').dataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter" : false,
                "orderMulti": true, // for disable multiple column at once
                "button": [
                    'copy', 'excel', 'pdf'
                ],
                "ajax": {
                    "url": "/user/loaddata",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ],
                "columns": [
                    { "data": "Id", "name": "Id", "autoWidth": true },
                    { "data": "Name", "name": "Name", "autoWidth": true },
                    {
                        "data": "Birthday", "name": "Birthday", "autoWidth": true, "type": "date ",
                        render: function (d) {
                            return moment(d).format("DD.MM.YYYY");
                        }
                    },
                    { "data": "Email", "name": "Email", "autoWidth": true },
                    { "data": "Phone", "name": "Phone", "autoWidth": true },
                    {
                        "render": function(data, type, full, meta) {
                            return '<a class="btn btn-info" href="/user/edit/' + full.Id + '">Edit</a>';
                        }
                    },
                    {
                        data: null,
                        render: function(data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" +
                                row.Id +
                                "'); >Delete</a>";
                        }
                    }
                ]
            });
            
        });
        
        function DeleteData(userId) {
            if (confirm("Are you sure you want to delete ...?")) {
                Delete(userId);
            } else {
                return false;
            }
        }


        function Delete(userId) {
            var url = "user/Delete";

            $.post(url,
                { ID: userId },
                function(data) {
                    if (data) {
                        var oTable = $('#table').DataTable();
                        oTable.draw();
                    } else {
                        alert("Something Went Wrong!");
                    }
                });
        }
    </script>
}
